# === Unity Scenes and Assets ===
*.unity      merge=unityyamlmerge eol=lf text
*.prefab     merge=unityyamlmerge eol=lf text
*.asset      merge=unityyamlmerge eol=lf text
*.mat        merge=unityyamlmerge eol=lf text
*.anim       merge=unityyamlmerge eol=lf text
*.controller merge=unityyamlmerge eol=lf text
*.overrideController merge=unityyamlmerge eol=lf text
*.mask       merge=unityyamlmerge eol=lf text

# === Shader files ===
*.shader     text eol=lf

# === Text files ===
*.cs         text eol=lf
*.json       text eol=lf
*.xml        text eol=lf
*.txt        text eol=lf
*.md         text eol=lf
*.asmdef     text eol=lf
*.rsp        text eol=lf

# === YAML-formatted files ===
*.meta       text merge=unityyamlmerge eol=lf
ProjectSettings/*.asset text merge=unityyamlmerge eol=lf

# === Binary files tracked by Git LFS ===
*.png        filter=lfs diff=lfs merge=lfs -text
*.jpg        filter=lfs diff=lfs merge=lfs -text
*.jpeg       filter=lfs diff=lfs merge=lfs -text
*.tga        filter=lfs diff=lfs merge=lfs -text
*.psd        filter=lfs diff=lfs merge=lfs -text
*.mp3        filter=lfs diff=lfs merge=lfs -text
*.wav        filter=lfs diff=lfs merge=lfs -text
*.ogg        filter=lfs diff=lfs merge=lfs -text
*.fbx        filter=lfs diff=lfs merge=lfs -text
*.obj        filter=lfs diff=lfs merge=lfs -text
*.mp4        filter=lfs diff=lfs merge=lfs -text
*.webm       filter=lfs diff=lfs merge=lfs -text
*.ttf        filter=lfs diff=lfs merge=lfs -text
*.otf        filter=lfs diff=lfs merge=lfs -text

# === Ignore unity-generated cache/build files ===
# WebGL build outputs usually go to `Build/` or `Builds/` and are not tracked by Git

# === Prevent CRLF issues on Windows ===
* text=auto eol=lf
